<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@drawable/shape_gray50">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="输入手机号"
            android:inputType="number"
            android:maxLength="11"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_title_color"
            android:textColorHint="@color/grayText"
            android:textSize="14sp"
            android:text="18516634528"/>



        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_line"
            android:visibility="gone" />


    </LinearLayout>


    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_gray50"
        android:hint="输入登录密码"
        android:text="123456"
        android:inputType="textPassword"
        android:maxLength="11"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:textColor="@color/black_title_color"
        android:textColorHint="@color/grayText"
        android:textSize="14sp" />





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_forget"
            style="@style/click_toolbar_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="12dp"
            android:padding="12dp"
            android:text="忘记密码"
            android:textColor="@color/black_title_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_switch"
            style="@style/click_toolbar_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:drawableLeft="@mipmap/icon_switch"
            android:drawablePadding="3dp"
            android:padding="12dp"
            android:text="手机验证码登录"
            android:textColor="@color/baseColor"
            android:textSize="14sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@mipmap/agreement_selete_no"/>
        <TextView
            style="@style/base_text_style"
            android:textSize="12sp"
            android:text="我已阅读并同意"/>

        <TextView
            android:id="@+id/tv_register_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/baseColor"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="《用户协议》"/>

        <TextView
            style="@style/base_text_style"
            android:textSize="12sp"
            android:text="和"/>

        <TextView
            android:id="@+id/tv_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/baseColor"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="《隐私条款》"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        style="@style/login_btn_style"
        android:layout_marginTop="30dp"
        android:text="登录" />





</LinearLayout>
